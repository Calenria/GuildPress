<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>${guildTitle}</title>
        <link rel="stylesheet" href="http://code.jquery.com/mobile/1.1.0/jquery.mobile-1.1.0.min.css" />
        
        <link rel="apple-touch-icon" href="@{'/public/images/favicon.png'}"/>
        <link rel="icon" href="@{'/public/images/favicon.png'}" sizes="32x32">
        <link rel="shortcut icon" href="@{'/public/images/favicon.ico'}">
        
        <style>
            /* App custom styles */
        </style>
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js">
        </script>
        <script src="http://code.jquery.com/mobile/1.1.0/jquery.mobile-1.1.0.min.js">
        </script>
    </head>
    <body>
        <div data-role="page" data-theme="a" id="home" data-title="${guildTitle} - News">
            <div data-theme="a" data-role="header">
                <h3>
                    ${guildTitle}
                </h3>
            </div>
            <div data-role="content">
                <div data-role="navbar" data-iconpos="none">
                    <ul>
                        <li>
                            <a href="#home" data-theme="a" data-icon="" class="ui-btn-active">
                                News
                            </a>
                        </li>
                        <li>
                            <a href="#shoutbox" data-theme="a" data-icon="">
                                Shoutbox
                            </a>
                        </li>
                    </ul>
                </div>
                
                <div data-role="collapsible-set" data-theme="a" data-content-theme="a">
					
	
#{if topics.size() > 0}
	#{list items:topics, as:'topic'}
		
		
					<div data-role="collapsible" data-collapsed="true">
					<h3>${topic.title}</h3>
						<p>${topic.firstPost.content}</p>
					</div>
		
		
	#{/list}
#{/if}
	
				</div>	
                
                
            </div>
            #{if session.username && user != null}
            <div data-role="footer">
				<h6>Eingeloggt als: <span class="class class-${user.avatar.cclass.name.toLowerCase()}">${user.avatar.name}</span> [<a href="@{FrontPage.logout()}">Logout</a>]</h6>
			</div><!-- /footer -->
            #{/if}
            
        </div>

         <div data-role="page" data-theme="a" id="shoutbox" data-title="${guildTitle} - Shoutbox">
            <div data-theme="a" data-role="header">
                <h3>
                    ${guildTitle}
                </h3>
            </div>
            <div data-role="content">
                <div data-role="navbar" data-iconpos="none">
                    <ul>
                        <li>
                            <a href="#home" data-theme="a" data-icon="">
                                News
                            </a>
                        </li>
                        <li>
                            <a href="#shoutbox" data-theme="a" data-icon="" class="ui-btn-active">
                                Shoutbox
                            </a>
                        </li>
                    </ul>
                </div>
                
							#{if session.username && user != null}

							<br>

			<form action="/shoutbox/add" method="get" data-ajax="false" id="form-shoutbox" class="ui-body ui-body-a ui-corner-all" >
				<input type="hidden" name="nickname" value="${user.avatar.name}" />
				<input type="hidden" name="mobile" value="true" />
				<fieldset>
					<div data-role="fieldcontain" class="ui-hide-label">
						<label for="message" class="text">Nachricht:</label>
						<input type="text" name="message" placeholder="Nachricht"/>
					</div>
					<button type="submit" data-theme="a" name="submit" value="submit-value">Shout!</button>
				</fieldset>
			</form>
						
							
							#{/if}
							#{else}
							<div data-role="collapsible" data-collapsed="true" data-icon=""  data-theme="a" data-content-theme="a">
							<h3>Einloggen um etwas zu schreiben</h3>
							<form action="@{FrontPage.login()}" method="get" data-ajax="false" id="form-shoutbox" class="ui-body ui-body-a ui-corner-all" >
								
								#{if flash.error}
									<p id="box-login-error" class="msg error colBlurb">
										&{flash.error}
									</p>
								#{/if}
								#{if flash.success}
									<p id="box-login-success" class="msg success colBlurb">
										&{flash.success}
									</p>
								#{/if}
							
								<p id="username-field">
									<label class="username" for="username">Email</label>
									<input class="username" type="text" name="username" id="username" value="${flash.username}" />
								</p>
								<p id="password-field">
									<label class="password" for="password">Passwort</label>
									<input class="password" type="password" name="password" id="password" value="" />
								</p>
								<p id="remember-field">
									<label class="remember" for="remember">Merken</label>
									<input class="remember" type="checkbox" name="remember" id="remember" value="true" ${flash.remember ? 'checked="true"' : ''} />
									
								</p>
						
									<input type="submit" id="box-login-signin" value="Einloggen" />
								
							</form>
							</div>
							#{/else}



				

#{if shouts.size() > 0}
	#{list items:shouts, as:'message'}
		<div class="ui-body ui-body-a ui-corner-all" style="margin-top: 5px;"><img style="float:left; margin-right:20px;" src="${message.user.avatar.getImage()}" height="84" width="84" alt="${message.user.avatar?.name}s avatar" />
		<h3 style="margin-top: 0px;">${message.name}</h3>
		<p>${message.raw_message.raw()}</p>
		<p class="ui-li-aside">am ${message.date.format('dd. MMMM yyyy','de')} um ${message.date.format('HH:mm')}</p>
		</div>
	#{/list}
#{/if}
               
                

                

            </div>
            
            
            #{if session.username && user != null}
            <div data-role="footer">
				<h6>Eingeloggt als: <span class="class class-${user.avatar.cclass.name.toLowerCase()}">${user.avatar.name}</span> [<a href="@{FrontPage.logout()}">Logout</a>]</h6>
			</div><!-- /footer -->
            #{/if}
            
            
        </div>
        
        <script>

        </script>
    </body>
</html>